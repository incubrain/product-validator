{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "tailwindCSS.classAttributes": ["class", "className", "ui"],
  "tailwindCSS.experimental.classRegex": [
    ["ui:\\s*{([^)]*)\\s*}", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["slots:\\s*{([^}]*)}", "(?:'|\"|`)([^'\"]*?)(?:'|\"|`)"],
    ["variants:\\s*{([^}]*)}", "(?:'|\"|`)([^'\"]*?)(?:'|\"|`)"],
    ["tv\\([^)]*\\)", "(?:'|\"|`)([^'\"]*?)(?:'|\"|`)"]
  ],
  "tailwindCSS.experimental.configFile": "app/assets/css/main.css",
  "tailwindCSS.suggestions": true,
  "tailwindCSS.hovers": true,
  "tailwindCSS.codeActions": true,
  "tailwindCSS.validate": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "files.associations": {
    "*.css": "tailwindcss",
    "*.md": "markdown"
  },
  "tailwindCSS.includeLanguages": {
    "vue": "html",
    "typescript": "javascript",
    "javascript": "javascript"
  },
  "tailwindCSS.classFunctions": ["tv", "clsx", "cn", "createUIComponent"],
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.nuxt/**",
    "**/.output/**"
  ],
  "mdc.enableFormatting": true,
  "mdc.debug": true,
  "mdc.enableComponentMetadataCompletions": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.validate.enable": true,
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.tsserver.maxTsServerMemory": 4096,
  "accessibility.signals.chatRequestSent": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.clear": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.codeActionApplied": {
    "sound": "off"
  },
  "accessibility.signals.lineHasBreakpoint": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.lineHasError": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.lineHasFoldedArea": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.lineHasInlineSuggestion": {
    "sound": "off"
  },
  "accessibility.signals.lineHasWarning": {
    "sound": "off",
    "announcement": "off"
  }
}
